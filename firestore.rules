rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Claims collection - public read, server writes via Admin SDK
    // Note: Admin SDK bypasses these rules, but we keep them for client-side protection
    match /claims/{claimId} {
      // Anyone can read claims (public feed)
      allow read: if true;
      
      // Admin SDK writes bypass rules, but we block client writes for security
      allow write: if false;
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      // Users can read and write their own user document
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Fetch logs - public read for "last updated", server writes via Admin SDK
    match /fetchLogs/{logId} {
      // Anyone can read logs (for "last updated" display on homepage)
      allow read: if true;
      
      // Admin SDK writes bypass rules, but we block client writes for security
      allow write: if false;
    }
  }
}

